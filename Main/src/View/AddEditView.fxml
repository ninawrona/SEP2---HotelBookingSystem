<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/11.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="View.AddEditViewController">
    <children>
        <Label alignment="CENTER" prefHeight="97.0" prefWidth="600.0"
               text="Room Details">
            <font>
                <Font size="28.0"/>
            </font>
        </Label>
        <VBox prefHeight="337.0" prefWidth="600.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0"
                      prefWidth="200.0">
                    <children>
                        <Label prefHeight="40.0" prefWidth="150.0"
                               text="Number">
                            <font>
                                <Font size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0"
                                        top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="idField" prefHeight="30.0"
                                   prefWidth="150.0">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0"
                                        top="5.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0"
                      prefWidth="200.0">
                    <children>
                        <Label prefHeight="45.0" prefWidth="156.0" text="Type">
                            <font>
                                <Font size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0"
                                        top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <ComboBox fx:id="typeDropdown" prefHeight="30.0"
                                  prefWidth="150.0"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="92.0"
                      prefWidth="600.0">
                    <children>
                        <Label prefHeight="40.0" prefWidth="150.0"
                               text="Number of beds">
                            <font>
                                <Font size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0"
                                        top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="nrOfBedsField" prefWidth="150.0">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0"
                                        top="5.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#confirmButton"
                        prefHeight="32.0" prefWidth="119.0" text="Confirm">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
